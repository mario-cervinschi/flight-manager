<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="travel.client.gui.BuyTicketsController">

    <Button mnemonicParsing="false" onAction="#onBackButtonCLick"
            prefWidth="30" prefHeight="30" text="←" textAlignment="CENTER"
            AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0"/>

    <VBox spacing="10" alignment="CENTER"
          AnchorPane.topAnchor="40.0" AnchorPane.bottomAnchor="0.0"
          AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Label text="Select how many tickets to buy to:"/>
        <Label fx:id="flightLabel" text="INVALID FLIGHT"/>
        <ComboBox fx:id="ticketCountField"/>
        <Button fx:id="confirmButton" onAction="#handleOnConfirmButton" text="Confirm"/>
    </VBox>

</AnchorPane>

