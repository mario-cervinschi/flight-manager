<?xml version="1.0" encoding="UTF-8"?>

<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>
<VBox alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="ro.mpp2025.controller.MainController"
      prefHeight="400.0" prefWidth="660.0">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"></Insets>
    </padding>
    <children>
        <HBox alignment="CENTER">
            <Label fx:id="connectedAsLabel" text="Connected as INVALID"></Label>
        </HBox>
        <AnchorPane>
            <TableView fx:id="flightsTable" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                <columns>
                    <TableColumn fx:id="flightsDestinationColumn" prefWidth="75.0" text="Destination"/>
                    <TableColumn fx:id="flightsTakeOffColumn" prefWidth="75.0" text="Take off"/>
                    <TableColumn fx:id="flightsAirportColumn" prefWidth="75.0" text="Airport Name"/>
                    <TableColumn fx:id="flightsSeatsAvailableColumn" prefWidth="75.0" text="Seats Available"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </AnchorPane>
    </children>
    <children>
        <HBox alignment="CENTER" spacing="20">
            <children>
                <Label text="Cauta zboruri"></Label>
                <TextField fx:id="destinationField"/>
                <DatePicker fx:id="dateField"></DatePicker>
                <Button onAction="#onFindFlightsButtonClick" text="Cauta"></Button>
                <Button text="Reset" onAction="#onResetFlightButton">
                    <graphic>
                        <ImageView fitWidth="30" fitHeight="30">
                            <Image url="@/sprites/reload.png"></Image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </HBox>
        <AnchorPane>
            <TableView fx:id="searchCriteriaTable" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
                <columns>
                    <TableColumn fx:id="searchFlightsDestinationColumn" prefWidth="75.0" text="Destination"/>
                    <TableColumn fx:id="searchFlightsTakeOffColumn" prefWidth="75.0" text="Take off"/>
                    <TableColumn fx:id="searchFlightsSeatsAvailableColumn" prefWidth="75.0" text="Seats Available"/>
                    <TableColumn fx:id="searchFlightsBuyColumn" prefWidth="100.0" text="Cumpara"/>
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>
        </AnchorPane>
    </children>

    <HBox alignment="CENTER_RIGHT" spacing="20">
        <children>
            <Button text="Logout" onAction="#onLogoutButtonClick"/>
        </children>
    </HBox>
</VBox>
